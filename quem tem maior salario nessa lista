salario=[3,5,8,4,6]
nome=["ana","beto","cris","rob","maria"]
n=(len(salario))

for k in range(n):
    print(nome[k],"",salario[k])

for k in range(n):
    if salario[k]>7:
        salario[k]=salario[k]*1,5
    else:
        salario[k]=salario[k]*2
